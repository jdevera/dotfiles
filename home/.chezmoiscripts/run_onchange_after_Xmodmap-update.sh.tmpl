{{- if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash
# Xmodmap hash: {{ include "dot_Xmodmap" | sha256sum }}

# {{ template "dotfiles_bashlib.sh" }}
# Help shellcheck identify the above include
true || source ../.chezmoitemplates/dotfiles_bashlib.sh

dot::chezmoi_script_start "apply custom key bindings (Xmodmap)"

[ -e "~/.Xmodmap" ] || dot::chezmoi_script_skipped "Xmodmap config is not installed"
dot::has_command xmodmap || dot::chezmoi_script_skipped "xmodmap is not installed"

xmodmap ~/.Xmodmap

dot::success "custom key bindings applied"
{{ end -}}
